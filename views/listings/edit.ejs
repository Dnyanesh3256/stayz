<% layout("/layouts/boilerplate.ejs") %>

<body>
    <h2>Edit Listing : </h2>

    <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
        <input name="listing[title]" type="text" placeholder="enter title" value="<%= listing.title %>">
        <br> <br>
        <textarea name="listing[description]" placeholder="enter description"><%= listing.description %></textarea>
        <br> <br>
        <input name="listing[image]" type="text" placeholder="enter image URL" value="<%= listing.image %>">
        <br> <br>
        <input name="listing[price]" type="number" placeholder="enter price" value="<%= listing.price %>">
        <br> <br>
        <input name="listing[country]" type="text" placeholder="enter country" value="<%= listing.country %>">
        <br> <br>
        <input name="listing[location]" type="text" placeholder="enter location" value="<%= listing.location %>">
        <br> <br>
        <button>Edit Listing</button>
</body>